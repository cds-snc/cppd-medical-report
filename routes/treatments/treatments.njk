{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('treatments.title') }}<br/> <span class="text-base">{{ __('patient_type')}} {{ patientName(data) }}</span></h1>

    <div>

        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            <ol>
            {% for treatment in data.treatments %}
                <li>{{ treatment.treatment_type }}</li>
            {% endfor %}
            </ol>
            <p><a href="{{ routePath('add_treatment') }}">{{ __('Add a treatment') }}</a></p>

            <div class="w-full">
                <div class="w-1/3">
                    <button type="submit">{{ __('Next: Overall patient summary') }}</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}