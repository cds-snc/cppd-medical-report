{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('medication.title') }}<br/> <span class="text-base">{{ __('patient_name')}} {{ data.first_name }} {{ data.last_name }}</span></h1>

    <div>

        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            <ol>
            {% for med in data.medications %}
                <li>{{ med.medication_name }}</li>
            {% endfor %}
            </ol>

            <p><a href="/en/add_medication">Add a medication</a></p>

            {{ formButtons('Next: Treatments') }}
        </form>
    </div>

{% endblock %}
