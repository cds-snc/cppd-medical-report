{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('medication.title') }}<br/> <span class="text-base">{{ __('patient_name')}} {{ data.name }}</span></h1>

    <div>

        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            <ol>
            {% for med in data.medications %}
                <li>{{ med.medication_name }}</li>
            {% endfor %}
            </ol>

            <p><a href="/en/add_medication">Add a medication</a></p>

            <div class="buttons">
                <div class="buttons--left">
                    <button type="submit" class="w-1/3">{{ __('Next: Treatments') }}</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
