{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('health.title') }}<br/> <span class="text-base">{{ __('patient')}} {{ patientName(data) }}</span></h1>

    <div>
        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            
            {{ textArea(
                'overall_health',
                'health.label',
                { required: true, hint: 'health.hint' }
            ) }}

            <div class="buttons">
                <div class="buttons--left">
                    <button type="submit" class="w-1/3">{{ __('health.next_button') }}</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
