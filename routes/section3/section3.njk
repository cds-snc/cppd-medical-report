{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('section3.title') }}</h1>

    <div>
        <p>
            {{ __('section3.intro') }}
        </p>

        <form method="post">

            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            {{ 
                radioButtons('numYearsWasPatient', 
                    { 
                        '1': 'form.num_years_was_patient.opt1',
                        '2': 'form.num_years_was_patient.opt2',
                        '3': 'form.num_years_was_patient.opt3',
                        '4': 'form.num_years_was_patient.opt4'
                    }, 
                data.numYearsWasPatient, 
                'form.num_years_was_patient.desc',
                errors,
                { required: true }) 
            }}
            {{ textInput('visitNumber', 'form.visit_number.desc', { required: true }) }}

            {{ textInput('lastVisitDate', 'form.last_visit_date.desc', { hint: 'YYYY-MM-DD', required: true }) }}

            {{ textInput('firstTreatmentDate', 'form.first_treatment_date.desc', { hint: 'YYYY-MM-DD', required: true }) }}

            {{ formButtons() }}
        </form>
    </div>

{% endblock %}
