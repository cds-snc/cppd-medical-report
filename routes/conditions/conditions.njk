{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('conditions.title') }}<br/> <span class="text-base">{{ __('conditions.patient')}} {{ data.name }}</span></h1>

    <div>
        <p>
            {{ __('conditions.intro') }}
        </p>

        <ol>
        {% for cond in data.conditions %}
            <li>{{ cond.name_of_condition }}</li>
        {% endfor %}
        </ol>

        <p><a href="/en/add_condition">Add a condition</a></p>

        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            
            <div class="buttons">
                <div class="buttons--left">
                    <button type="submit" class="w-1/3">{{ __('Next: Medications') }}</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
