{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('conditions.title') }}<br/> <span class="text-base">{{ __('conditions.patient')}} {{ patientName(data) }}</span></h1>

    <div>
        <p>
            {{ __('conditions.intro') }}
        </p>

        <h2 class="text-2xl border-b mb-4">Medical conditions</h2>
        
        {% for condition in data.conditions %}
            <div class="flex">
                <div class="flex-auto">
                    <p>{{ condition.name_of_condition }}</p>
                    <p class="text-base">ICD-9-CM code: XXXX</p>
                    <p class="text-base">Symptoms began: {{ condition.symptoms_began }}</p>
                </div>
                <div class="flex-auto">
                    <!-- <a href="">Edit condition</a><br> -->
                    <a href="">Remove condition</a>
                </div>
            </div>
        {% endfor %}
        

        <p><a href="{{ routePath('add_condition') }}">Add a condition</a></p>

        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            
            <div class="w-full">
                <div class="w-1/3">
                    <button type="submit">{{ __('Next: Medications') }}</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
