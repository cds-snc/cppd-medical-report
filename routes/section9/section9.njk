{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('Section 9 - Declaration') }}</h1>

    <div>
        <p>
            {{ __('I confirm that, to the best of my knowledge all of the information I have provided in this report is accurate and complete.') }}
        </p>

        <form method="post">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            {{ radioButtons('i_am_a', { '1':'general practice physician or physician certified in family medicine (CCFP)','other':'other physician specialist (please specify below)', '2':'nurse practicioner', '3':'registered nurse in a geographically isolated community (not urban or rural)'}, data.i_am_a, 'I am a:', errors, { required: true }) }}

            {{ textInput('other_specify', 'Other')}}

            {{ textInput('name', 'Name', { required: true }) }}
            {{ textInput('date', 'Date', { hint: 'YYYY-MM-DD', required: true }) }}
            {{ textArea('address', 'Address and telephone number', { required: true}) }}

            {{ formButtons() }}
        </form>
    </div>

{% endblock %}
